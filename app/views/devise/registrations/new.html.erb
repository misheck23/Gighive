<div class="signup-container" style="background-image: url('<%= image_path('signup.png') %>'); background-size: cover; background-repeat: no-repeat; background-position: center;">
  <h2 class="text-center text-white">Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :name, class: 'form-label' %>
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'form-label' %>
      <% if @minimum_password_length %>
        <em class="text-muted">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: 'form-label' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit "Sign Up", class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

<style>
  .signup-container {
    width: auto;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .form-horizontal {
    max-width: 400px;
    margin: 20px auto;
    background: rgba(255, 255, 255, 0.85);
    padding: 2rem;
    border-radius: 0.5rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .form-control {
    border: 1px solid #ced4da;
    border-radius: 0.25rem;
    margin-bottom: 1rem;
  }

  .btn-primary {
    background-color: #0056b3;
    border-color: #0056b3;
    color: white;
    padding: 0.375rem 0.75rem;
    border-radius: 0.25rem;
    display: block;
    width: 100%;
  }

  .btn-primary:hover {
    background-color: #8d6e63;
    border-color: #8d6e63;
  }

  .form-horizontal .checkbox {
    padding-left: 20px;
  }
</style>
